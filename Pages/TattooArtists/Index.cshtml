@page
@model Laszlo_Sebastian_Proiect.Pages.TattooArtists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meet Our Artists</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TattooArtist[0].ArtistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TattooArtist[0].Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TattooArtist[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TattooArtist[0].Location)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TattooArtist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style.StyleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationName)
            </td>

            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
