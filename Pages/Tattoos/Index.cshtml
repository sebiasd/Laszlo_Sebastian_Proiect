@page
@model Laszlo_Sebastian_Proiect.Pages.Tattoos.IndexModel

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get" class="form-row">
    <div class="form-group">
        <label for="searchTitle">Search by Client:</label>
        <div class="input-group">
            <input type="text" id="searchClient" name="searchClient" class="form-control" />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-page="./Index" class="btn btn-secondary">Clear Search</a>
        </div>
    </div>
    <div class="form-group">
        <label for="searchTattooArtist">Filter by TattooArtist:</label>
        <div class="input-group">
            <select id="searchTattooArtist" name="searchTattooArtist" class="form-control">
                <option value="">-- Select TattooArtist --</option>
                @foreach (var artist in Model.TattooArtists)
                {
                    <option value="@artist">@artist</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Filter</button>
            
            <a asp-page="./Index" class="btn btn-secondary">Clear Filter</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].TattooArtist) <!-- Assuming TattooArtist is a string -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoo[0].AgeConfirmation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tattoo)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TattooArtist.ArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Style.StyleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeConfirmation)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
